    <div class="container-fluid addstorebox">
		<h3> Add Store </h3>
    <form action="/addstore/update" method="post">
      <div class="form-group text-left">
        <label for="storename">Store Name:</label>
        <input type="text" name="storename" id="storename" class="form-control">
      </div>
      <div class="form-group text-left">
        <label for="phonenumber">Phone Number:</label>
        <input type="tel" name="phonenumber" id="phonenumber" class="form-control">
      </div>
       <div class="form-group text-left">
        <label for="phonenumber">Store Hours:</label>
        <input type="tel" name="storehours" id="storehours" class="form-control">
      </div>
       <div class="form-group text-left">
        <label for="phonenumber">Price Range:</label>
        <input type="tel" name="pricerange" id="pricerange" class="form-control">
      </div>
       <div class="form-group text-left">
        <label for="phonenumber">Address:</label>
        <input type="tel" name="address" id="address" class="form-control">
      </div>
       <div class="form-group text-left">
        <label for="phonenumber">Accessibility Rating:</label>
        <input type="tel" name="accessibility" id="accessibility" class="form-control">
      </div>
      <div class="form-group text-left">
        <label for="storetype">Store Type:</label>
        <select class="form-control" id="storetype" name="storetype">
          <option value="bookstores" name="bookstores">Bookstore</option>
          <option value="clothing" name="clothing">Clothing</option>
          <option value="department" name="department">Department</option>
          <option value="grocery" name="grocery">Grocery</option>
          <option value="hardware" name="hardware">Hardware</option>
          <option value="sporting" name="sporting">Sporting Goods</option>
          <option value="other" name="other">Other</option>
        </select>
      </div>
      <button type="submit" class="btn btn-primary" id="submit">Submit</button>
    </form>
    </div>
  
    <script>
      $('#submit').click(update);
      
      function update() {
        var storename = $('#storename').val();
        var phonenumber = $('#phonenumber').val();
        var storetype = $('#storetype option:selected').text();
        var storehours = $('#storehours').val();
        var pricerange = $('#pricerange').val();
        var address = $('#address').val();
        var accessibility = $('#accessibility').val();

        console.log(storetype);

        $.post('/addToMap/update', {
          "storename" : storename,
          "phonenumber" : phonenumber,
          "storetype" : storetype,
          "storehours" : storehours,
          "pricerange" : pricerange,
          "address" : address,
          "accessibility" : accessibility
        }, function() {
          console.log('update');

        });
      }
    </script>

	
