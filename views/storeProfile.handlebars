<h4 id="accessibleID"><b>How accessible is this store?</b></h4>
<form id="rating">
  <div class="switch-field">
    <div class="rating-type switch-title">
      <p><i class="fab fa-accessible-icon fa-lg"></i> Physical Handicap Accessibility</p>
      <a data-toggle="popover" title="Physical Handicap Accessibility" data-content="The establishment provides wheelchair ramps, functional elevators, and accessible walkways" data-placement="bottom" class="ml-2"><i class="fa fa-info-circle"></i></a>
    </div>
    <input type="radio" id="ha1" name="switch_1" value="1" checked/>
    <label for="ha1">1</label>
    <input type="radio" id="switch_3_2" name="switch_1" value="2" />
    <label for="switch_3_2">2</label>
    <input type="radio" id="switch_3_3" name="switch_1" value="3" />
    <label for="switch_3_3">3</label>
    <input type="radio" id="switch_3_4" name="switch_1" value="4" />
    <label for="switch_3_4">4</label>
    <input type="radio" id="switch_3_right" name="switch_1" value="5" />
    <label for="switch_3_right">5</label>
  </div>
  <div class="switch-field">
    <div class="rating-type switch-title">
      <p><i class="fas fa-universal-access fa-lg"></i> Staff Availability</p>
      <a data-toggle="popover" title="Staff Availability" data-content="The establishment provides knowledgable staff who readily can readily provide assistance to customers" data-placement="bottom" class="ml-2"><i class="fa fa-info-circle"></i></a>
    </div>
    <input type="radio" id="sd1" name="switch_2" value="1" checked/>
    <label for="sd1">1</label>
    <input type="radio" id="sd2" name="switch_2" value="2" />
    <label for="sd2">2</label>
    <input type="radio" id="sd3" name="switch_2" value="3" />
    <label for="sd3">3</label>
    <input type="radio" id="sd4" name="switch_2" value="4" />
    <label for="sd4">4</label>
    <input type="radio" id="switch_4_right" name="switch_2" value="5" />
    <label for="switch_4_right">5</label>
  </div>
  <div class="switch-field">
    <div class="rating-type switch-title">
      <p><i class="fas fa-eye fa-lg"></i> Visual Assistance</p>
      <a data-toggle="popover" title="Visual Assistance" data-content="The quantity, quality and placement of signs in the establishment" data-placement="bottom" class="ml-2"><i class="fa fa-info-circle"></i></a>
    </div>
    <input type="radio" id="va1" name="switch_3" value="1" checked/>
    <label for="va1">1</label>
    <input type="radio" id="va2" name="switch_3" value="2" />
    <label for="va2">2</label>
    <input type="radio" id="va3" name="switch_3" value="3" />
    <label for="va3">3</label>
    <input type="radio" id="va4" name="switch_3" value="4" />
    <label for="va4">4</label>
    <input type="radio" id="switch_5_right" name="switch_2" value="5" />
    <label for="switch_4_right">5</label>
  </div>

</form>

